{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "agricultor/contact-info",
  "title": "Información de Contacto",
  "category": "agricultor",
  "description": "Muestra teléfono, email, dirección y redes sociales de tu negocio",
  "icon": "phone",
  "keywords": ["contacto", "información", "teléfono", "email"],
  "supports": {
    "html": false,
    "align": ["full", "wide"]
  },
  "attributes": {
    "layout": {
      "type": "string",
      "default": "vertical"
    },
    "showSocial": {
      "type": "boolean",
      "default": true
    }
  },
  "example": {
    "attributes": {
      "layout": "vertical",
      "showSocial": true
    }
  }
}
